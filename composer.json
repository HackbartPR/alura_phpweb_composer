{
    "name": "hackbartpr/buscardor-cursos",
    "description": "Biblioteca que busca os cursos no site da Alura",
    "type": "library",
    "authors": [
        {
            "name": "HackbartPR",
            "email": "cgharckbart@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.5",
        "symfony/dom-crawler": "^6.2",
        "symfony/css-selector": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "HackbartPR\\BuscadorDeCursos\\": "src/"
        },
        "classmap": [
            "./src/utils/Util.php"
        ],
        "files": [
            "./src/functions/functions.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phan/phan": "^5.4"
    },
    "scripts":{
        "phpcs" : "phpcs --standard=PSR12 src\\",
        "phan" : "phan --allow-polyfill-parser",
        "add" : "git add .",
        "commit": "git commit -m",
        "check" : [
            "@phpcs",
            "@phan",
            "@add",
            "@commit -- $1"
        ],
        "push" : "phpcs --standard=PSR12 src\\ && phan --allow-polyfill-parser && git add . && git commit -m '$1' && git push"
    }
}
